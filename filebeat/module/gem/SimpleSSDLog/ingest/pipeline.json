{
  "description": "Pipeline for parsing gem SimpleSSDLog logs",
  "processors": [
      {
          "date": {
              "if": "ctx.event.timezone == null",
              "field": "SimpleSSDLog.timestamp",
              "target_field": "@timestamp",
              "formats": [
                  "MMM  d HH:mm:ss",
                  "MMM dd HH:mm:ss",
                  "MMM d HH:mm:ss",
                  "ISO8601"
              ],
              "on_failure": [{"append": {"field": "error.message", "value": "{{ _ingest.on_failure_message }}"}}]
          }
      },
      {
          "date": {
              "if": "ctx.event.timezone != null",
              "field": "SimpleSSDLog.timestamp",
              "target_field": "@timestamp",
              "formats": [
                  "MMM  d HH:mm:ss",
                  "MMM dd HH:mm:ss",
                  "MMM d HH:mm:ss",
                  "ISO8601"
              ],
              "timezone": "{{ event.timezone }}",
              "on_failure": [{"append": {"field": "error.message", "value": "{{ _ingest.on_failure_message }}"}}]
          }
      },
      {
          "remove": {
              "field": "SimpleSSDLog.timestamp"
          }
      }
    ],
  "on_failure" : [{
    "set" : {
      "field" : "error.message",
      "value" : "{{ _ingest.on_failure_message }}"
    }
  }]
}
